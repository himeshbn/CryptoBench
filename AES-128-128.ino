// ---------- Main ----------
void loop(){
  uint8_t key[16]={0x2b,0x7e,0x15,0x16,0x28,0xae,0xd2,0xa6,0xab,0xf7,0x97,0x75,0x46,0x20,0x63,0xed};
  uint8_t plain[16]={0x32,0x43,0xf6,0xa8,0x88,0x5a,0x30,0x8d,0x31,0x31,0x98,0xa2,0xe0,0x37,0x07,0x34};
  uint8_t RoundKey[176];
  uint8_t block[16];

  for(uint32_t run=0;run<N_RUNS;run++){
    // Measure key schedule by repeating KeyExpansion N_LOOPS times (keeps same semantics as before)
    trig_high();
    uint64_t ks_start = esp_timer_get_time();
    for(uint32_t i=0;i<N_LOOPS;i++) KeyExpansion(RoundKey,key);
    uint64_t ks_us = esp_timer_get_time() - ks_start;
    trig_low(); ks_times_us[run]=ks_us;
    delay(50);

    // Prepare RoundKey once for enc/dec loops (deterministic)
    KeyExpansion(RoundKey,key);

    // Encryption timing
    trig_high();
    uint64_t enc_start = esp_timer_get_time();
    for(uint32_t i=0;i<N_LOOPS;i++){
      memcpy(block,plain,16);
      AES_Encrypt(block,RoundKey);
    }
    uint64_t enc_us = esp_timer_get_time() - enc_start;
    trig_low(); enc_times_us[run]=enc_us;
    delay(50);

    // Decryption timing
    trig_high();
    uint64_t dec_start = esp_timer_get_time();
    for(uint32_t i=0;i<N_LOOPS;i++){
      memcpy(block,plain,16);
      // to ensure we measure a true decrypt, first encrypt a temp then decrypt it
      AES_Encrypt(block,RoundKey);   // now block holds ciphertext
      AES_Decrypt(block,RoundKey);   // decrypt back
      // we don't check contents here to avoid interfering with timing
    }
    uint64_t dec_us = esp_timer_get_time() - dec_start;
    trig_low(); dec_times_us[run]=dec_us;
    delay(200);

    // compute per-run metrics (using encryption time for throughput)
    double enc_s = enc_us/1e6;
    double throughput = (BLOCK_BYTES*(double)N_LOOPS)/enc_s;
    double cycles = (CPU_FREQ_HZ*enc_s)/N_LOOPS;

    Serial.printf("AES-128-128,128,128,%u,%u,%.3f,%.3f,%.3f,%.3f,%.3f\n",
      run+1,N_LOOPS,(double)ks_us,(double)enc_us,(double)dec_us,throughput,cycles);
  }

  double ks_mean,ks_sd,enc_mean,enc_sd,dec_mean,dec_sd;
  compute_stats(ks_times_us,N_RUNS,ks_mean,ks_sd);
  compute_stats(enc_times_us,N_RUNS,enc_mean,enc_sd);
  compute_stats(dec_times_us,N_RUNS,dec_mean,dec_sd);

  double enc_s_mean = enc_mean/1e6;
  double throughput_mean = (BLOCK_BYTES*N_LOOPS)/enc_s_mean;
  double cycles_mean = (CPU_FREQ_HZ*enc_s_mean)/N_LOOPS;

  Serial.println("# SUMMARY");
  Serial.printf("# KS mean=%.3fus ±%.3f\n",ks_mean,ks_sd);
  Serial.printf("# ENC mean=%.3fus ±%.3f\n",enc_mean,enc_sd);
  Serial.printf("# DEC mean=%.3fus ±%.3f\n",dec_mean,dec_sd);
  Serial.printf("# Throughput=%.3f B/s, Cycles/block=%.3f\n",throughput_mean,cycles_mean);

  Serial.println("ALG,key_bits,block_bits,N_runs,N_loops,enc_mean_us,enc_sd_us,dec_mean_us,dec_sd_us,throughput_Bps,cycles_per_block");
  Serial.printf("AES-128-128,128,128,%u,%u,%.3f,%.3f,%.3f,%.3f,%.3f,%.3f\n",
    N_RUNS,N_LOOPS,enc_mean,enc_sd,dec_mean,dec_sd,throughput_mean,cycles_mean);

  Serial.println("# BENCHMARK COMPLETE - Halting.");
  while(true) delay(1000);
}
