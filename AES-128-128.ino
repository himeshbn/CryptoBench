// ---------- AES UTILS ----------
void KeyExpansion(uint8_t *RoundKey, const uint8_t *Key) {
  uint8_t temp[4];
  int i = 0;
  while (i < 16) { RoundKey[i] = Key[i]; i++; }
  int bytesGenerated = 16; int rconIter = 1;
  uint8_t k;
  while (bytesGenerated < 176) {
    for (int j = 0; j < 4; j++) temp[j] = RoundKey[bytesGenerated - 4 + j];
    if (bytesGenerated % 16 == 0) {
      k = temp[0]; temp[0] = temp[1]; temp[1] = temp[2]; temp[2] = temp[3]; temp[3] = k;
      temp[0] = sbox[temp[0]]; temp[1] = sbox[temp[1]]; temp[2] = sbox[temp[2]]; temp[3] = sbox[temp[3]];
      temp[0] ^= Rcon[rconIter++];
    }
    for (uint8_t j = 0; j < 4; j++) {
      RoundKey[bytesGenerated] = RoundKey[bytesGenerated - 16] ^ temp[j];
      bytesGenerated++;
    }
  }
}

uint8_t xtime(uint8_t x){ return ((x<<1)^(((x>>7)&1)*0x1b)); }

void SubBytes(uint8_t* state){ for(int i=0;i<16;i++) state[i]=sbox[state[i]]; }
void ShiftRows(uint8_t* s){
  uint8_t temp;
  // Row 1
  temp = s[1]; s[1]=s[5]; s[5]=s[9]; s[9]=s[13]; s[13]=temp;
  // Row 2
  temp = s[2]; uint8_t temp2=s[6]; s[2]=s[10]; s[6]=s[14]; s[10]=temp; s[14]=temp2;
  // Row 3
  temp = s[3]; s[3]=s[15]; s[15]=s[11]; s[11]=s[7]; s[7]=temp;
}
void MixColumns(uint8_t* s){
  uint8_t Tmp,Tm,t;
  for(int i=0;i<4;i++){
    t=s[i*4+0]; Tmp=s[i*4+0]^s[i*4+1]^s[i*4+2]^s[i*4+3];
    Tm=s[i*4+0]^s[i*4+1]; Tm=xtime(Tm); s[i*4+0]^=Tm^Tmp;
    Tm=s[i*4+1]^s[i*4+2]; Tm=xtime(Tm); s[i*4+1]^=Tm^Tmp;
    Tm=s[i*4+2]^s[i*4+3]; Tm=xtime(Tm); s[i*4+2]^=Tm^Tmp;
    Tm=s[i*4+3]^t; Tm=xtime(Tm); s[i*4+3]^=Tm^Tmp;
  }
}
void AddRoundKey(uint8_t* state,const uint8_t* RoundKey,int round){
  for(int i=0;i<16;i++) state[i]^=RoundKey[round*16+i];
}

void AES_Encrypt(uint8_t* input, const uint8_t* RoundKey){
  uint8_t state[16]; memcpy(state,input,16);
  AddRoundKey(state,RoundKey,0);
  for(int round=1;round<=9;round++){
    SubBytes(state); ShiftRows(state); MixColumns(state); AddRoundKey(state,RoundKey,round);
  }
  SubBytes(state); ShiftRows(state); AddRoundKey(state,RoundKey,10);
  memcpy(input,state,16);
}

// ---------- AES Decryption helpers ----------
static inline uint8_t gmul(uint8_t a, uint8_t b) {
  uint8_t p = 0;
  for (int i = 0; i < 8; i++) {
    if (b & 1) p ^= a;
    uint8_t hi_bit = (a & 0x80);
    a <<= 1;
    if (hi_bit) a ^= 0x1b;
    b >>= 1;
  }
  return p;
}

void InvSubBytes(uint8_t* state){ for(int i=0;i<16;i++) state[i]=invsbox[state[i]]; }

void InvShiftRows(uint8_t* s){
  uint8_t temp;
  // Row1 rotate right by 1
  temp = s[13]; s[13]=s[9]; s[9]=s[5]; s[5]=s[1]; s[1]=temp;
  // Row2 rotate right by 2
  temp = s[2]; s[2]=s[10]; s[10]=temp; temp = s[6]; s[6]=s[14]; s[14]=temp;
  // Row3 rotate right by 3
  temp = s[3]; s[3]=s[7]; s[7]=s[11]; s[11]=s[15]; s[15]=temp;
}

void InvMixColumns(uint8_t* s){
  for (int i = 0; i < 4; i++) {
    uint8_t a0 = s[i*4+0], a1 = s[i*4+1], a2 = s[i*4+2], a3 = s[i*4+3];
    s[i*4+0] = gmul(a0,0x0e)^gmul(a1,0x0b)^gmul(a2,0x0d)^gmul(a3,0x09);
    s[i*4+1] = gmul(a0,0x09)^gmul(a1,0x0e)^gmul(a2,0x0b)^gmul(a3,0x0d);
    s[i*4+2] = gmul(a0,0x0d)^gmul(a1,0x09)^gmul(a2,0x0e)^gmul(a3,0x0b);
    s[i*4+3] = gmul(a0,0x0b)^gmul(a1,0x0d)^gmul(a2,0x09)^gmul(a3,0x0e);
  }
}

void AES_Decrypt(uint8_t* input, const uint8_t* RoundKey) {
  uint8_t state[16]; memcpy(state,input,16);
  AddRoundKey(state,RoundKey,10);
  for (int round = 9; round >= 1; round--) {
    InvShiftRows(state);
    InvSubBytes(state);
    AddRoundKey(state,RoundKey,round);
    InvMixColumns(state);
  }
  InvShiftRows(state);
  InvSubBytes(state);
  AddRoundKey(state,RoundKey,0);
  memcpy(input,state,16);
}

// ---------- Benchmark helpers ----------
double ks_times_us[20], enc_times_us[20], dec_times_us[20];
inline void trig_high(){digitalWrite(TRIG_PIN,HIGH);}
inline void trig_low(){digitalWrite(TRIG_PIN,LOW);}
void compute_stats(const double *vals,uint32_t n,double &mean,double &sd){
  if(n==0){mean=sd=0;return;} double sum=0;for(uint32_t i=0;i<n;i++)sum+=vals[i];
  mean=sum/n;if(n==1){sd=0;return;}double s=0;for(uint32_t i=0;i<n;i++)s+=pow(vals[i]-mean,2);
  sd=sqrt(s/(n-1));
}

